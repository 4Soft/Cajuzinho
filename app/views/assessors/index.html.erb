<h1>Acessores</h1>

<table>
  <thead>
    <tr>
      <th>Cargo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @assessors.each do |assessor| %>
      <tr>
        <td><%= assessor.role %></td>
        <td><%= link_to 'Mostrar', assessor %></td>
        <td><%= link_to 'Editar', edit_assessor_path(assessor) %></td>
        <td><%= link_to 'Deletar', assessor, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Cadastrar Acessor', new_assessor_path %>
