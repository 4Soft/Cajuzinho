<h1>Listing assessors</h1>

<table>
  <thead>
    <tr>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @assessors.each do |assessor| %>
      <tr>
        <td><%= assessor.role %></td>
        <td><%= link_to 'Show', assessor %></td>
        <td><%= link_to 'Edit', edit_assessor_path(assessor) %></td>
        <td><%= link_to 'Destroy', assessor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Assessor', new_assessor_path %>
