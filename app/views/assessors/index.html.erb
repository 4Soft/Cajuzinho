<h1>Assessores</h1>

<table class="table table-striped text-center">
  <thead>
    <tr>
      <th>Cargo</th> 
      <!-- put label -->
      <th colspan="3">Opções</th>
    </tr>
  </thead>

  <tbody>
    <% @assessors.each do |assessor| %>
      <tr>
        <td><%= assessor.role %></td>
        <td>
          <%= link_to 'Mostrar', assessor, class: "btn btn-success" %>
          <%= link_to 'Editar', edit_assessor_path(assessor),  class: "btn btn-info" %>
          <%= link_to 'Deletar', assessor, class: "btn btn-danger", method: :delete, data: { confirm: 'Tem certeza?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Cadastrar Assessor', new_assessor_path, class: "btn btn-default" %>
