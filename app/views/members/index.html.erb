<h1>Membros</h1>

<div class="row-fluid">
  <div class= "panel span12">
    <div class="span12">
      <h3>Buscar por Cargo</h3>
      <%= simple_form_for(:member, method: :get) do |f| %>
        <%= f.input :role, label: "Cargo", required: false, collection: @roles %>
        <%= f.button :submit, "OK", class:"btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>

<div class="row title-row">
  <div class="col-md-3 title-line">
  </div> <!--col-md-3 -->
</div> <!--row -->

<table>
  <thead>
    <tr>
      <th>Cargo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.role %></td>
        <td><%= link_to 'Mostrar', member, class: "btn btn-default"%></td>
        <td><%= link_to 'Editar', edit_member_path(member), class: "btn btn-default"%></td>
        <td><%= link_to 'Deletar', member, class: "btn btn-default", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Cadastrar Membro', new_member_path, class: "btn btn-default" %>
