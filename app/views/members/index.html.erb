<h1>Membros</h1>

<div class="row-fluid">
  <%= simple_form_for(:member, method: :get) do |f| %>
    <%= f.input :role, label: "Busca por cargo", required: false, collection: @roles %>
    <%= f.button :submit, "OK", class:"btn btn-success" %>
  <% end %>
</div>

<table class="table table-striped table-bordered table-hover table-with-margin">
  <thead>
    <tr>
      <th>Cargo</th>
      <th>Opções</th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.role %></td>
        <td><%= link_to icon('file-text-o'), member, class: "btn btn-success", title: 'Mostrar'%>
            <%= link_to icon('edit'), edit_member_path(member), class: "btn btn-info", title: 'Editar'%>
            <%= link_to icon('trash-o'), member, class: "btn btn-danger", title: 'Deletar', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to icon('plus'), new_member_path, class: "btn btn-default", title: 'Cadastrar Membro' %>
